    <label class = "pb-3">Ask you coach anything: </label>
    <div class="input-group mb-3">
      <input name = "question" type="text" class="form-control" placeholder="Type your question here" aria-label="Recipient's username" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <input type="submit" value="Ask!" class="btn btn-primary" >
      </div>
    </div>
  </div>
</form>


